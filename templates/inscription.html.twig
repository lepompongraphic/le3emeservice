{# templates/security/inscription.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
<div class="container" id="inscription">
	<div class="row">
		<div class="col-sm-8">

			<h2>Inscription :</h2>

			{{ form_start(form) }}

			<fieldset>

			<div class="form-group">
			{{ form_row(form.email, 
									 {attr: {class: 'form-control'}}) }}
			</div>
			<div class="form-group">
			{{ form_row(form.mdp, 
									 {attr: {class: 'form-control'}}) }}
			</div>
			<div class="form-group">
			
			{{ form_row(form.raisonSocial, 
									 {attr: {class: 'form-control'}}) }}
			</div>
			<div class="form-group">
			{{ form_row(form.siret, 
									 {attr: {class: 'form-control'}}) }}
			</div>
			<div class="form-group">
			{{ form_row(form.adresse, 
									 {attr: {class: 'form-control'}}) }}
			</div>
			<div class="form-group">
			{{ form_row(form.cp, 
									 {attr: {class: 'form-control'}}) }}
			</div>
			<div class="form-group">
			{{ form_row(form.ville, 
									 {attr: {class: 'form-control'}}) }}
			</div>
			<div class="form-group">
			{{ form_row(form.tel, 
									 {attr: {class: 'form-control'}}) }}
			</div>
			<div class="form-group">
			    <div class="form-check form-check-inline">
			{{ form_row(form.statut, 
									 {attr: {class: 'form-check-input'}}) }}
			</div>
			</div>

			</fieldset>
			
			<div class="form-group text-center">
				<button type="submit" class="btn btn-defeault btn-send">Inscription</button>
			</div>

			{{ form_end(form) }}

		</div>
	</div>
</div>

{% endblock %}