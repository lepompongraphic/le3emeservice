{# templates/login.html.twig  #}

{% extends 'base.html.twig' %}

{% block body %}

<div class="container" id="connexion">
  <div class="row">
    <div class="col-sm-8">

      <h2>Connexion :</h2>

      {# en cas d'erreur #}
      {% if error %}
          <div class="alert alert-danger">
              {{error.message|trans(error.messageData,'security')}}
          </div>
      {% endif %}

      <form action="{{ path('login') }}" method="post">

        <fieldset>

       <div class="form-group">
          <label>Email:</label>
          <input type="email" name="_username"
                 value="{{ last_username }}"
                 class="form-control"/>
        </div>

        <div class="form-group">
    			<label>Mot de passe:</label>
    			<input type="password" name="_password"
    						 class="form-control" />
    		</div>

        </fieldset>
        
        <div class="form-group text-center">
    			<button type="submit" class="btn btn-defeault btn-send">Connexion</button>
    		</div>

      </form>

    </div>
  </div>
</div>

{% endblock %}
